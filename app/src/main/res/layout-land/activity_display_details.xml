<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    tools:context="codingblocks.extra2.DisplayDetails"
    android:background="#c09167">

    <ListView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:id="@+id/sub_list"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#e8d7f6" />

    <fragment
        android:layout_width="475dp"
        android:layout_height="match_parent"
        android:name="codingblocks.extra2.Fragment1"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/sub_list"
        android:layout_toEndOf="@+id/sub_list" />
</RelativeLayout>
