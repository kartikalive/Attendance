<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dff5af">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject Name"
        android:id="@+id/sub_name"
        android:layout_marginLeft="100dp"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:textColor="#78451b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/lec_attended"
        android:layout_below="@+id/sub_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:text="-"
        android:textSize="18dp"
        android:textColor="#78451b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/lec_missed"
        android:layout_below="@+id/lec_attended"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:textSize="18dp"
        android:textColor="#78451b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/curr_att"
        android:layout_below="@id/lec_missed"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:textSize="18dp"
        android:textColor="#78451b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/lec_left"
        android:layout_below="@+id/curr_att"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:maxLength="25"
        android:textSize="18dp"
        android:textColor="#78451b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/min_lec_req"
        android:layout_below="@+id/lec_left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:textSize="18dp"
        android:textColor="#78451b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/condition"
        android:layout_below="@+id/min_lec_req"
        android:layout_marginTop="15dp"
        android:textSize="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:textColor="#78451b" />


</RelativeLayout>